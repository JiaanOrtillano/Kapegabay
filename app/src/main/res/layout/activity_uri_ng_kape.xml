<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA"
    android:padding="16dp">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mga uri ng kape"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:textColor="#333333" />
    </LinearLayout>

    <!-- Card-like Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="16dp"
        android:elevation="4dp">

        <Button
            android:id="@+id/btnRobusta"
            style="@style/KnowledgeButton"
            android:text="Robusta" />

        <Button
            android:id="@+id/btnExcelsa"
            style="@style/KnowledgeButton"
            android:text="Excelsa" />

        <Button
            android:id="@+id/btnArabica"
            style="@style/KnowledgeButton"
            android:text="Arabica" />

        <Button
            android:id="@+id/btnLiberica"
            style="@style/KnowledgeButton"
            android:text="Liberica" />
    </LinearLayout>
</LinearLayout>
