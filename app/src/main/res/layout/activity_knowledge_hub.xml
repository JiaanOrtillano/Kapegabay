<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".KnowledgeHub">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/menuBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Knowledge Hub"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:textColor="#333333" />

        <!-- SearchBar inside CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="8dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <EditText
                android:id="@+id/searchBar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Search here"
                android:background="@drawable/search_background"
                android:padding="12dp"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:backgroundTint="@android:color/transparent" />
        </androidx.cardview.widget.CardView>

        <!-- Buttons inside CardViews -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false">
            <Button
                android:id="@+id/btnUriNgKape"
                style="@style/KnowledgeButton"
                android:text="Mga uri ng kape" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false">
            <Button
                android:id="@+id/btnPaglipatTanim"
                style="@style/KnowledgeButton"
                android:text="Paglilipat-tanim" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false">
            <Button
                android:id="@+id/btnAbono"
                style="@style/KnowledgeButton"
                android:text="Pag-aabono (Fertilizing)" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false">
            <Button
                android:id="@+id/btnPruning"
                style="@style/KnowledgeButton"
                android:text="Pruning ng Kape (Maintenance Pruning)" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false">
            <Button
                android:id="@+id/btnRejuvenation"
                style="@style/KnowledgeButton"
                android:text="Rejuvenation" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false">
            <Button
                android:id="@+id/btnPagsusuri"
                style="@style/KnowledgeButton"
                android:text="Pagsusuri or Pagsasala( Sorting )" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false">
            <Button
                android:id="@+id/btnPagUuri"
                style="@style/KnowledgeButton"
                android:text="Pag-uuri ayon sa kalidad (Grading)" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false">
            <Button
                android:id="@+id/btnPagsasangag"
                style="@style/KnowledgeButton"
                android:text="Pagsasangag (Roasting)" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false">
            <Button
                android:id="@+id/btnDefects"
                style="@style/KnowledgeButton"
                android:text="Mga Depekto sa Kape (Coffee defects)" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false">
            <Button
                android:id="@+id/btnPeste"
                style="@style/KnowledgeButton"
                android:text="Pagkontrol sa mga Peste at Sakit" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
